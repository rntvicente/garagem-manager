{
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {},
  "extends": "eslint-config-airbnb-base/",
  "rules": {
    "max-len": [2, 110, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }],
    "no-lonely-if": 2,
    "curly": 2,
    "no-console": 2,
    "strict": [2, "safe"],
    "space-before-function-paren": [2, "never"],
    "func-names": 0,
    "vars-on-top": 0,
    "consistent-return": 0,
    "comma-dangle": 0,
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]    
  }
}